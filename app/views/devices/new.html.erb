<h1>Devices#new</h1>

<div class="container">
  <%= bootstrap_form_for(@device) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.text_field :device_name, label: "デバイス名", class: 'form-control' %>
      <%= f.text_field :mac_address, label: "macアドレス",class: 'form-control', pattern: "\d{1,2}\:\d{1,2}\:\d{1,2}\:\d{1,2}\:\d{1,2}\:\d{1,2}\:", placeholder: "xx:xx:xx:xx:xx:xx" %>
      <%= f.number_field :preset_temperature, label: "設定温度",class: 'form-control', min: 20, max: 30, placeholder: "20〜30の数字で入力すること" %>
      <%= f.check_box :device_communication, {}, "true", "false" %>

    <%= f.submit "Create new device", class: "btn btn-large btn-primary", name: nil %>
  <% end %>
</div>
